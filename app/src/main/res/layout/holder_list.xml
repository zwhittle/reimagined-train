<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
                name="vm"
                type="com.awesome.zach.jotunheimrsandbox.ui.viewmodels.ListListViewModel"/>

        <variable
                name="list"
                type="com.awesome.zach.jotunheimrsandbox.data.entities.JHList"/>

        <import type="android.view.View"/>
    </data>

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_xs"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/cardview_background_dark"
            app:cardCornerRadius="8dp">

        <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_margin="@dimen/margin_normal"-->
                <!--android:background="@drawable/rounded_corner"-->
                <!--android:foregroundTint="@color/cardview_background_light"-->
                <!--android:foregroundTintMode="src_over"-->
                <!--android:layout_height="match_parent">-->

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="@dimen/margin_small"
                android:background="@null"
                android:layout_height="match_parent">

            <TextView
                    android:id="@+id/title"
                    android:background="@null"
                    android:gravity="center"
                    android:padding="@dimen/margin_normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{list.name}"
                    tools:text="Next Available Actions"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>