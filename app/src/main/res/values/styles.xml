<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionModeOverlay">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@color/colorTextHint</item>
        <item name="android:tint">@android:color/white</item>
        <item name="actionModeBackground">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="NavHeaderTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="MenuGreyTheme" parent="AppTheme">
        <item name="android:textColor">@color/colorMenuGrey</item>
        <item name="android:tint">@color/colorMenuGrey</item>
    </style>

    <style name="MenuBlueTheme" parent="AppTheme">
        <item name="android:textColor">@color/colorMenuBlue</item>
        <item name="android:tint">@color/colorMenuBlue</item>
    </style>

    <style name="MenuOrangeTheme" parent="AppTheme">
        <item name="android:textColor">@color/colorMenuOrange</item>
        <item name="android:tint">@color/colorMenuOrange</item>
    </style>

    <style name="MenuRedTheme" parent="AppTheme">
        <item name="android:textColor">@color/colorMenuRed</item>
        <item name="android:tint">@color/colorMenuRed</item>
    </style>

    <style name="EditTextGreyTheme" parent="AppTheme">
        <item name="colorControlNormal">@color/colorMenuGrey</item>
        <item name="colorControlActivated">@color/colorMenuGrey</item>
        <item name="colorControlHighlight">@color/colorMenuGrey</item>
    </style>

    <style name="EditTextBlueTheme" parent="AppTheme">
        <item name="colorControlNormal">@color/colorMenuBlue</item>
        <item name="colorControlActivated">@color/colorMenuBlue</item>
        <item name="colorControlHighlight">@color/colorMenuBlue</item>
    </style>

    <style name="EditTextOrangeTheme" parent="AppTheme">
        <item name="colorControlNormal">@color/colorMenuOrange</item>
        <item name="colorControlActivated">@color/colorMenuOrange</item>
        <item name="colorControlHighlight">@color/colorMenuOrange</item>
    </style>

    <style name="EditTextRedTheme" parent="AppTheme">
        <item name="colorControlNormal">@color/colorMenuRed</item>
        <item name="colorControlActivated">@color/colorMenuRed</item>
        <item name="colorControlHighlight">@color/colorMenuRed</item>
    </style>

</resources>
